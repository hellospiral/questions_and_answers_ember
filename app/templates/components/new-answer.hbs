{{#if addNewAnswer}}
  <div class="container-fluid newAnswerBox">
    <div>
      <form>
        <div class="form-group">
          <label for="content">Answer:</label>
          {{input class="form-control" value=content id="content"}}
        </div>

        <div class="form-group">
          <label for="author">Your Name:</label>
          {{input class="form-control" value=author id="author"}}
        </div>

        <button class="btn btn-primary btn-outline btn-sm" {{action 'saveAnswer1'}}>Save</button>
        <button type="button" class="btn btn-outline btn-info btn-sm" {{action 'newAnswerHide'}}>Hide</button>
      </form>
    </div>
  </div>
  {{else}}
  <button class="btn btn-primary btn-outline" {{action 'answerFormShow'}}>Answer This Question</button>
{{/if}}
