{{#if updateQuestionForm}}
  <h4>Update Question</h4>
  <div>
    <form>
      <div class="form-group">
        <label for="content">Question</label>
        {{input class="form-control" value=content id="content" placeholder=question.content}}
      </div>

      <div class="form-group">
        <label for="author">Author</label>
        {{input class="form-control" value=author id="author" placeholder=question.author}}
      </div>

      <div class="form-group">
        <label for="tags">Tags</label>
        {{input class="form-control" value=tags id="tags" placeholder=question.tags}}
      </div>
      
      <button class="btn btn-success btn-outline btn-sm" {{action 'update' question}}>Save</button>
      <button type="button" class="btn btn-outline btn-info btn-sm" {{action 'updateFormHide'}}>Hide</button>
    </form>
  </div>
{{else}}
  <button type="button" class="btn btn-warning btn-outline btn-sm" {{action 'updateQuestionForm'}}>edit question</button>
{{/if}}
