{{#if addNewQuestion}}
  <h1>New Question</h1>
    <form>
      <div class="form-group">
        <label for="author">Author</label>
        {{input class="form-control" value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="content">Your Question</label>
        {{input class="form-control" value=content id="content"}}
      </div>

      <button type="button" class = "btn btn-outline btn-primary" {{action 'newQuestionSave1'}}>Save</button>
      <button type="button" class="btn btn-outline btn-info" {{action 'questionFormHide'}}>Hide</button>
    </form>
{{else}}
  <button  type="button" class = "btn btn-outline btn-primary" {{action 'questionFormShow'}}>New Question</button>
{{/if}}
