{{#if addNewQuestion}}
  <div class="container-fluid newQuestionBox">
    <form>
      <div class="form-group">
        <label for="content">Your Question:</label>
        {{input class="form-control" value=content id="content"}}
      </div>

      <div class="form-group">
        <label for="author">Your Name:</label>
        {{input class="form-control" value=author id="author"}}
      </div>

      <div class="form-group">
        <label for="author">Tags:</label>
        {{input class="form-control" value=tags id="tags" placeholder="tag1, tag2, ..."}}
      </div>


      <button type="button" class = "btn btn-outline btn-primary" {{action 'newQuestionSave1'}}>Save</button>
      <button type="button" class="btn btn-outline btn-info" {{action 'questionFormHide'}}>Hide</button>
    </form>
  </div>
{{else}}
  <button  type="button" class = "btn btn-outline btn-success btn-lg" {{action 'questionFormShow'}}>New Question</button>
{{/if}}
